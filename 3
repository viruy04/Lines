#include <stdio.h>
#include <string.h>

void removeExtraSpaces(char *str) {
    int i, j;
    int space = 0;
    for (i = 0, j = 0; str[i]; i++) {
        if (str[i] == ' ') {
            space++;
            if (space == 1) {
                str[j++] = str[i];
            }
        } else {
            space = 0;
            str[j++] = str[i];
        }
    }
    str[j] = '\0';
    
    if (j > 0 && str[j - 1] == ' ') {
        str[j - 1] = '\0';
    }
}

int main() {
    char str[100];
    printf("Введите строку: ");
    fgets(str, sizeof(str), stdin);
    
    removeExtraSpaces(str);
    
    printf("Результат: %s\n", str);
    
    return 0;
}
